use_frameworks!

target 'AirMapSDK-Example-iOS' do
	platform :ios, '9.0'
	pod 'Alamofire', '~> 4.0'
	pod 'AirMapSDK', :path => '../'
	pod 'Mapbox-iOS-SDK'
	pod 'SwiftTurf'
	pod 'CryptoSwift', :git => 'https://github.com/krzyzanowskim/CryptoSwift/', :branch => 'develop'
end

target 'AirMapSDKTests' do
	platform :ios, '9.0'
	pod 'AirMapSDK', :path => '../'
	pod 'Quick'
	pod 'Nimble'
	pod 'OHHTTPStubs'
	pod 'OHHTTPStubs/Swift'
end
